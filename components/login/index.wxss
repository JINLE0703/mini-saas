.container {
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.logo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 450rpx;
}

.logo-img {
  width: 160rpx;
  height: 160rpx;
  border: 1px solid #EAEBEC;
  border-radius: 50%;
}

.logo-welcome {
  height: 64rpx;
  margin-top: 24rpx;
  font-size: 44rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #262626;
  line-height: 64rpx;
}

.input-container {
  width: 670rpx;
  height: 136rpx;
  padding-top: 58rpx;
  border-bottom: 1px solid #D0D0D0;
  box-sizing: border-box;
}

.input-phone {
  height: 50rpx;
  line-height: 50rpx;
}

.input-placeholder {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #D0D0D0;
}

.code {
  display: flex;
  flex-direction: row;
}

.input-code {
  width: 450rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.btn-code {
  height: 45rpx;
  padding-left: 31rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A5C5FF;
  line-height: 45rpx;
  border-left: 1px solid #D0D0D0;
}

.btn {
  width: 670rpx !important;
  height: 88rpx !important;
  margin-top: 58rpx;
  padding: 0;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 88rpx;
}

.btn-login {
  background: #9AC2EC;
}

.btn-wx {
  background: #07C160;
}

