.container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 150rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #fff;
  box-sizing: border-box;
}

.data {
  display: flex;
  flex-direction: row;
}

.img {
  width: 60rpx;
  height: 74rpx;
}

.info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}

.name {
  width: 382rpx;
  height: 42rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #262626;
  line-height: 42rpx;
}

.size {
  width: 55rpx;
  height: 38rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 38rpx;
}

.icons-img {
  width: 68rpx;
  height: 68rpx;
  margin-left: 20rpx;
}