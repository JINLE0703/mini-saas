.container {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-top: 17rpx;
}

.side {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
}

.icon-green {
  width: 26rpx;
  height: 26rpx;
  margin-bottom: 10rpx;
}

.line {
  width: 1rpx;
  height: 300rpx;
  background: #EAEBEC;
}

.content {
  display: flex;
  flex-direction: column;
}

.time-info {
  display: flex;
  flex-direction: row;
}

.date,
.time {
  height: 28rpx;
  margin-right: 12rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 28rpx;
}

.card {
  position: relative;
  width: 646rpx;
  height: 258rpx;
  padding: 22rpx 25rpx 25rpx;
  margin-top: 18rpx;
  box-sizing: border-box;
}

.card-bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -999;
  width: 100%;
  height: 100%;
}

.card-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.site {
  height: 36rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 36rpx;
}

.reserve-info {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.dot {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 20rpx;
  height: 20rpx;
  margin-right: 8rpx;
  background-color: rgba(0, 73, 255, 0.1);
  border-radius: 50% 50%;
}

.dot::after {
  content: '';
  width: 10rpx;
  height: 10rpx;
  background-color: rgba(0, 73, 255, 0.7);
  border-radius: 50% 50%;
}

.reserve {
  height: 36rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #195AFF;
  line-height: 36rpx;
}

.title {
  margin-bottom: 48rpx;
  height: 48rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #262626;
  line-height: 48rpx;
}

.guest-info {
  display: flex;
  flex-direction: row;
}

.guest-avatar {
  margin-right: 11rpx;
  width: 72rpx;
  height: 72rpx;
}

.guest-name {
  margin-bottom: 4rpx;
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #262626;
  line-height: 33rpx;
}

.guest-status {
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 33rpx;
}