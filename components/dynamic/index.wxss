.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.header {
  position: relative;
  width: 690rpx;
  height: 388rpx;
  padding: 50rpx 30rpx 30rpx;
  box-sizing: border-box;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  border-radius: 8rpx 8rpx 0 0;
}

.title {
  width: 400rpx;
  height: 104rpx;
  margin-bottom: 32rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #E8EBFC;
  line-height: 52rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.line {
  width: 36rpx;
  height: 6rpx;
  margin-bottom: 126rpx;
  background: #E8EBFC;
}

.time {
  width: 253rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #DDDDDD;
  line-height: 40rpx;
}

.card-container {
  display: flex;
  flex-direction: column;
  width: 690rpx;
  background: #F5F6F8;
  border-radius: 0 0 8rpx 8rpx;
}

.card-item {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 212rpx;
  padding: 30rpx;
  box-sizing: border-box;
}

.item-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-title {
  width: 390rpx;
  height: 88rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #262626;
  line-height: 44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.item-time {
  width: 276rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
}

.item-poster {
  width: 202rpx;
  height: 152rpx;
  border-radius: 4rpx;
}

.item-border {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 630rpx;
  height: 1px;
  background: #E7E7E7;
}