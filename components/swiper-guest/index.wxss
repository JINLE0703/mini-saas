.swiper {
  width: 100%;
  height: 598rpx;
}

.swiper-item {
  display: flex;
  justify-content: center;
  overflow: visible;
  width: 404rpx;
  height: 100%;
}

.active {
  z-index: 999;
}

.quiet {
  transform: scale(0.9);
}

.item-container {
  display: flex;
  flex-direction: column;
  width: 404rpx;
  height: 100%;
}

.guest-img {
  width: 404rpx;
  height: 404rpx;
  border-radius: 8rpx 8rpx 0rpx 0rpx;
  border: 4rpx solid #0049FF;
  box-sizing: border-box;
}

.guest-info {
  position: relative;
  width: 404rpx;
  height: 194rpx;
  padding-top: 11rpx;
  padding-left: 32rpx;
  border-radius: 0rpx 0rpx 8rpx 8rpx;
  box-sizing: border-box;
}

.guest-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -999;
}

.guest-name {
  height: 67rpx;
  margin-bottom: 9rpx;
  font-size: 48rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 67rpx;
}

.guest-status {
  height: 44rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 44rpx;
}