.container {
  position: relative;
  padding: 30rpx;
}

.swiper {
  width: 100%;
  height: 598rpx;
}

.swiper-item {
  display: flex;
  justify-content: center;
  overflow: visible;
  width: 404rpx;
  height: 100%;
}

.active {
  z-index: 999;
}

.quiet {
  transform: scale(0.9);
  opacity: 0.5;
}

.item-container {
  display: flex;
  flex-direction: column;
  width: 404rpx;
  height: 100%;
}

.guest-img {
  width: 404rpx;
  height: 404rpx;
  border-radius: 8rpx 8rpx 0rpx 0rpx;
  border: 4rpx solid #0049FF;
  box-sizing: border-box;
}

.guest-info {
  position: relative;
  width: 404rpx;
  height: 194rpx;
  padding-top: 11rpx;
  padding-left: 32rpx;
  border-radius: 0rpx 0rpx 8rpx 8rpx;
  box-sizing: border-box;
}

.guest-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -999;
}

.guest-name {
  height: 67rpx;
  margin-bottom: 9rpx;
  font-size: 48rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 67rpx;
}

.guest-status {
  height: 44rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 44rpx;
}

.arrow-left {
  position: absolute;
  top: 304rpx;
  left: 83rpx;
  width: 58rpx;
  height: 58rpx;
}

.arrow-right {
  position: absolute;
  top: 304rpx;
  right: 83rpx;
  width: 58rpx;
  height: 58rpx;
}

.arrow-img {
  width: 100%;
  height: 100%;
}

.footer {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 128rpx;
  width: 100%;
  margin-top: 24rpx;
}

.dots {
  display: flex;
  flex-direction: row;
}

.dot-item {
  position: relative;
  width: 128rpx;
  height: 128rpx;
  margin-right: 12rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.dot-active::after {
  position: absolute;
  top: 0;
  left: 0;
  content: '';
  width: 128rpx;
  height: 128rpx;
  border: 5rpx solid #0049FF;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.dot-item image {
  width: 100%;
  height: 100%;
}

.more {
  width: 128rpx;
  height: 128rpx;
  background-color: #F5F6F8;
  border: 1px solid #EAEBEC;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #262626;
  line-height: 128rpx;
  text-align: center;
}

.iconfont {
  font-family: 'iconfont';
  font-size: 22rpx;
}

.arrow-more::before {
  content: '\e688';
}