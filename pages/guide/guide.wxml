        <view class="serve-card">
          <image class="serve-icon" mode="aspectFill" src="https://6465-demo-1gkm3ya7d1739416-1304452149.tcb.qcloud.la/images/%E5%B9%BF%E5%91%8A%E7%89%8C.png?sign=d495dc089671c8eee204c0d2c1bc6404&t=1608115475" />
