.container {
  padding: 30rpx;
}

.mini-container {
  padding-bottom: 40rpx;
}

.detail-card {
  width: 690rpx;
  height: 202rpx;
  margin-top: 24rpx;
  border-radius: 8rpx;
  background: linear-gradient(180deg, #369EFF 0%, #1F8FFF 100%);
  background-size: 100% 100%;
  overflow: hidden;
}

.detail-card-title {
  width: 128rpx;
  height: 45rpx;
  margin-top: 34rpx;
  margin-left: 32rpx;
  margin-bottom: 15rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 45rpx;
  text-shadow: 0rpx 2rpx 16rpx rgba(0, 70, 147, 0.23);
}

.detail-card-info {
  width: 367rpx;
  height: 80rpx;
  margin-left: 32rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 40rpx;
}

.ad {
  width: 690rpx;
  height: 160rpx;
  margin-top: 24rpx;
  background: #D8D8D8;
  border-radius: 8rpx;
  background-size: 100% 100%;
}

.data-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.iconfont {
  font-family: 'iconfont' !important;
  font-size: 24rpx;
  font-weight: bold;
}

.arrow-right {
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
}

.arrow-right::before {
  content: '\e688';
}

.data-list {
  width: 690rpx;
  height: 750rpx;
  margin-top: 24rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  background: #F5F6F8;
  border-radius: 8px;
  overflow: hidden;
  box-sizing: border-box;
}

.serve {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 36rpx;
}

.serve-card {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 331rpx;
  height: 160rpx;
  background: #F5F6F8;
  border-radius: 8rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #262626;
  line-height: 160rpx;

}

.serve-icon {
  width: 43rpx;
  height: 44rpx;
  margin-right: 20rpx;
}