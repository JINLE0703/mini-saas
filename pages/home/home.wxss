.container {
  padding-bottom: 132rpx;
  position: relative;
}

.bg-top {
  width: 100%;
  height: 732rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -999;
}

.bg-bottom {
  width: 100%;
  height: 180rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: -999;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 36rpx;
  margin-bottom: 40rpx;
}

.header-title {
  margin-bottom: 20rpx;
  height: 72rpx;
  font-size: 56rpx;
  font-family: tx-font;
  color: #0049FF;
  line-height: 72rpx;
}

.header-info {
  margin-bottom: 40rpx;
}

.header-date {
  margin-right: 20rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #666666;
  line-height: 40rpx;
}

.header-site {
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #666666;
  line-height: 36rpx;
}

.ad {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 208rpx;
  margin-top: 16rpx;
}

.ad-img {
  width: 690rpx;
  height: 160rpx;
}

.partner {
  margin: 30rpx;
}

.partner-header {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.partner-icon {
  width: 66rpx;
  height: 66rpx;
}

.partner-title {
  height: 56rpx;
  font-size: 38rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #262626;
  line-height: 56rpx;
}

.partner-content {
  width: 690rpx;
  height: 536rpx;
  margin-top: 46rpx;
}

.share {
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  width: 132rpx;
  height: 60rpx;
  margin-top: 88rpx;
  background-color: #0049FF;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 60rpx;
  text-align: center;
}